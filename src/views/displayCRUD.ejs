<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .btn {
            border-radius: 3px;
            
        }
        .btn:hover {
            border: solid 1px black; 
        }
    </style>
</head>
<body>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">...</th>
          </tr>
        </thead>
        <tbody>
          
          <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                <a class="btn btn-add" >thêm</a>
                <a class="btn btn-edit" type="a">sửa</a>
                <a href="/delete-user?id=<%=dataTable[i].id %>" class="btn btn-delete" type="button">xóa</a>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">name</th>
            <th scope="col">address</th>
            <th scope="col">Description</th>
            <th scope="col">image</th>
            <th scope="col">...</th>
          </tr>
        </thead>
        <tbody>
          
          <% for(var i=0; i < dataTable_1.length; i++) { %>
            <tr>
              <td><%= dataTable_1[i].name %></td>
              <td><%= dataTable_1[i].address %></td>
              <td><%= dataTable_1[i].description %></td>
              <td><%= dataTable_1[i].image %></td>
              <td>
                <a class="btn btn-edit" type="a">đặt sân</a>
                
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
</body>
</html>
