      </div>
      <div class="center-container">
        <ul id="navbar-1">
          <li class="hello-1"><a href="/home?page=1" class="hello">Sân bóng</a></li>
          <li class="hello-1"><a href="/edit" class="hello">Chỉnh thông tin sân</a></li>
          <li class="hello-1"><a href="/revenue" class="hello">Doanh thu</a></li>
        </ul>
      </div>
      <div class="right-container">
        <div class="list-log-in">
          <a href="/login-user">
            <div class="list-picture-log-in">Hoàng</div>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <h1 class="col-12 mt-3">Đăng ký đặt sân</h1>
      <form action="/book-stadium" method="POST">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Tên</label>
            <input type="text" class="form-control" placeholder="VD: Hoàng" name="name" required>
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Số điện thoại</label>
            <input type="text" class="form-control" name="phoneNumber" placeholder="VD: 0123456789" maxlength="10" required>
          </div>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" placeholder="VD: 123@gmail.com" name="email" required>
        </div>
        <div class="form-group">
          <label for="inputAddress">Sân đặt</label>
          <input type="text" class="form-control" name="nameStadium" value="<%= stadiumInfo.name%>">
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">Ngày đặt</label>
            <input type="date" class="form-control" name="date" id="dt" required>
          </div>
          <div class="form-group col-md-6">
            <label for="inputState">Khung giờ</label>
            <select name="time" class="form-control">
              <option value="5:30 - 7:30">5:30 - 7:30</option>
              <option value="7:30 - 9:30">7:30 - 9:30</option>
              <option value="15:30 - 17:30">15:30 - 17:30</option>
              <option value="17:30 - 19:30">17:30 - 19:30</option>
              <option value="19:30 - 21:30">19:30 - 21:30</option>
              <option value="21:30 - 23:30">21:30 - 23:30</option>

            </select>
          </div>

        </div>
        <button type="submit" class="btn btn-primary">Đặt sân</button>
      </form>
    </div>
  </div>



  <!-- content -->

