    <style>
        .table-edit {
            width: auto;
            margin-top: 100px;
            font-size: 15px;
        }
        .table-stadium {
            margin: 0 200px;
            text-align: center;
           
        }
        .thead th {
            border: 2px solid #dee2e6;
            padding: 10px 10px;
            text-transform: uppercase;
        }
        .tbody td {
            border: 1px solid #dee2e6;
            padding: 0px 10px;
        }
        .container-create {
            margin: 70px auto;
            width: 30rem;
            padding: 15px 15px;
            box-shadow: 0 15px 35px 0 #777777;
            
        }
        .container-content{
            
        }
        h3 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="home-header-container">
        <div class="home-header-content">
            <div class="left-container">
              <h1>
                <a href="/" class="logo">
                  <img src="https://datsantructuyen.vn/images/config/logo_1658658270.png" alt="logo">
                </a>
              </h1>     
            </div>
            <div class="center-container">
                <ul id="navbar-1">
                    <li class="hello-1"><a href="/home?page=1" class="hello">Sân bóng</a></li>
                    <li class="hello-1"><a href="/edit" class="hello">Chỉnh thông tin sân</a></li>
                    <li class="hello-1"><a href="/revenue" class="hello">Doanh thu</a></li>
                </ul>
            </div>
            <div class="right-container">
                    <div class="list-log-in">
                      <a href="/login-user">
                        <div class="list-picture-log-in">Hoàng</div>
                      </a>
                    </div>
            </div>
        </div>
        
        <div class="clear"></div>
    </div>
    
    <!-- content -->
    
    
    <div class="table-edit">
        <table class="table-stadium">
            <thead class="thead">
              <tr>
                <th scope="col">name</th>
                <th scope="col">address</th>
                <th scope="col">Description</th>
                <!-- <th scope="col">image</th> -->
                <th scope="col">...</th>
              </tr>
            </thead>
            <tbody class="tbody">
              
              <% for(var i=0; i < dataTable_1.length; i++) { %>
                <tr>
                  <td><%= dataTable_1[i].name %></td>
                  <td><%= dataTable_1[i].address %></td>
                  <td><%= dataTable_1[i].description %></td>
                  <!-- <td><%= dataTable_1[i].image %></td> -->
                  <td>
                    <a class="btn btn-edit" type="a">Sửa</a>
                    <a href="/delete-stadium?id=<%=dataTable_1[i].id%>" class="btn btn-edit" type="button">Xóa</a>
                        
                    <!-- <button type="submit" class="btn btn-primary">Add new</button> -->
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
    </div>
    <!-- theem san -->
    <div class="container-create">
        <div class="container-content">
            <h3 class="col-12 mt-3">ĐĂNG KÝ SÂN MỚI</h3>
            <form action="/create-stadium" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" placeholder="VD: name stadium" name="name" required>
                  
                </div>
                <div class="form-group">
                      <label>Address</label>
                      <input type="text" class="form-control" placeholder="VD: Vinh city" name="address" required>
                    
                  </div>
                <div class="form-group">
                  <label>Description</label>
                  <input type="text" class="form-control" name="description" placeholder="VD: description" required>
                </div>
                <div class="form-group">
                    <label>Link image</label>
                    <input type="text" class="form-control" name="image" required>
                  
                </div>
                <h3 onclick="showSuccessToast();">
                    <button type="submit" class="btn btn-primary">Add new</button>
                </h3>
              </form>
        </div>
    </div>
    
    
    <div class="top-ft">
      <div class="top-ft-left">
        <img width="" height="" class="logo_footer lazy after-lazy" alt="Ankaza.vn" src="https://datsantructuyen.vn/images/config/logo_chan_1658658538.png" style="opacity: 1; display: none;">
      </div>
      <div class="top-ft-center">
